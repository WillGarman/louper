{
  "name": "louper",
  "version": "0.1.0",
  "description": "A lightweight zoom circle dev tool. Hold Alt/Option to magnify any part of your page.",
  "license": "MIT",
  "author": "Will Garman",
  "repository": {
    "type": "git",
    "url": "https://github.com/willgarman/louper"
  },
  "keywords": [
    "zoom",
    "magnifier",
    "loupe",
    "devtools",
    "inspect",
    "ui"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./auto": "./dist/auto.global.js"
  },
  "sideEffects": [
    "./dist/auto.global.js"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0",
    "jsdom": "^25.0.0"
  }
}
